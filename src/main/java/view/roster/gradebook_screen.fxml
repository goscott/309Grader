<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.event.ActionEvent?>
<?import javafx.scene.layout.FlowPane?>


<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.roster.GradebookController">
   <center>
      <SplitPane fx:id="splitPane" dividerPositions="0.5">
         <items>
            <VBox fx:id="expander" maxWidth="0.0" minWidth="0.0">
               <children>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <TreeView fx:id="tree" maxWidth="250.0" minWidth="0.0" prefHeight="200.0" prefWidth="250.0" VBox.vgrow="ALWAYS" />
                        <Button focusTraversable="false" graphicTextGap="0.0" minWidth="24.0" mnemonicParsing="false" onAction="#collapseTree" prefHeight="100000.0" prefWidth="10.0" text="&lt;&lt;&lt;&lt;&lt;&lt;&lt;&lt;&lt;" textAlignment="CENTER" wrapText="true" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <TableView id="table" fx:id="mainTable" BorderPane.alignment="CENTER">
              <columns>
            		<TableColumn id="nameCol" fx:id="nameCol" prefWidth="100.0" text="Student Name" />
               		<TableColumn id="idCol" fx:id="idCol" prefWidth="100.0" text="Student ID" />
               		<TableColumn id="totalGradeCol" fx:id="totalGradeCol" prefWidth="100.0" text="Overall Grade" />
              </columns>
            </TableView>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <TableView focusTraversable="false" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="150.0" text="Number of Data Points" />
          <TableColumn prefWidth="75.0" text="Range" />
            <TableColumn prefWidth="75.0" text="Mean" />
            <TableColumn prefWidth="125.0" text="Standard Deviation" />
            <TableColumn prefWidth="75.0" text="Median" />
        </columns>
      </TableView>
   </bottom>
</BorderPane>
