<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.event.ActionEvent?>
<?import javafx.scene.layout.FlowPane?>

<TableView id="table" fx:id="mainTable" prefHeight="20.0" prefWidth="10.0"
xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.roster.GradebookController">
  <columns>
		<TableColumn id="nameCol" fx:id="nameCol" prefWidth="100.0" text="Student Name"/>
   		<TableColumn id="idCol" fx:id="idCol" prefWidth="100.0" text="Student ID" />
   		<TableColumn id="totalGradeCol" fx:id="totalGradeCol" prefWidth="100.0" text="Overall Grade" />
  </columns>
  <tooltip>
	<Tooltip text="Allows for viewing and manipulation of the gradebook for this course. 
				   Grades can be changed by double clicking on an assignment cell and entering 
				   a value either as a raw score or a percentage. Right-clicking the table 
				   will bring up a list of options for manipulation of the gradebook." />
  </tooltip>
</TableView>
   
