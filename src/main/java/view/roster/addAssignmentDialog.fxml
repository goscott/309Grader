         </children>
      </Pane>
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="11.0" text="Description" />
            <TextArea fx:id="descrField" layoutX="14.0" layoutY="31.0" prefHeight="266.0" prefWidth="572.0">
